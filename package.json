{
  "name": "addok-server",
  "version": "0.0.0",
  "description": "Full-featured HTTP API for addok",
  "main": "index.js",
  "type": "module",
  "repository": "https://github.com/livingdata-co/addok-server",
  "author": "Jérôme Desboeufs <jerome@livingdata.co>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "lint": "xo",
    "test": "c8 --all ava test/*.js",
    "test-lcov": "c8 --reporter=lcov --reporter=text --all ava test/*.js",
    "start": "node server"
  },
  "dependencies": {
    "@livingdata/tabular-data-helpers": "^0.0.13",
    "addok-cluster": "^0.9.0",
    "addok-geocode-stream": "^0.25.0",
    "content-disposition": "^0.5.4",
    "cors": "^2.8.5",
    "csv-write-stream": "^2.0.0",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "http-errors": "^2.0.0",
    "into-stream": "^8.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "on-finished": "^2.4.1"
  },
  "devDependencies": {
    "ava": "^6.3.0",
    "c8": "^10.1.3",
    "supertest": "^7.1.1",
    "xo": "^0.56.0"
  },
  "xo": {
    "semicolon": false,
    "space": 2,
    "rules": {
      "camelcase": "off",
      "comma-dangle": [
        "error",
        "never"
      ],
      "unicorn/prevent-abbreviations": "off",
      "import/no-unassigned-import": "off",
      "import/order": "off"
    }
  },
  "ava": {
    "environmentVariables": {
      "ADDOK_FILTERS": "citycode,postcode,type"
    }
  },
  "engines": {
    "node": ">= 20.9"
  },
  "packageManager": "yarn@1.22.22+sha1.ac34549e6aa8e7ead463a7407e1c7390f61a6610"
}
