{
  "name": "addok-server",
  "version": "0.0.0",
  "description": "Full-featured HTTP API for addok",
  "main": "index.js",
  "type": "module",
  "repository": "https://github.com/livingdata-co/addok-server",
  "author": "Jérôme Desboeufs <jerome@livingdata.co>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "lint": "xo",
    "test": "c8 --all ava test/*.js",
    "test-lcov": "c8 --reporter=lcov --reporter=text --all ava test/*.js",
    "start": "node server"
  },
  "dependencies": {
    "@livingdata/tabular-data-helpers": "^0.0.13",
    "addok-cluster": "^0.11.0",
    "addok-geocode-stream": "^0.27.0",
    "content-disposition": "^0.5.4",
    "cors": "^2.8.5",
    "csv-write-stream": "^2.0.0",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "http-errors": "^2.0.0",
    "into-stream": "^8.0.1",
    "joi": "^18.0.1",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "on-finished": "^2.4.1"
  },
  "devDependencies": {
    "ava": "^6.4.1",
    "c8": "^10.1.3",
    "supertest": "^7.1.4",
    "xo": "^0.60.0"
  },
  "xo": {
    "semicolon": false,
    "space": 2,
    "rules": {
      "camelcase": "off",
      "comma-dangle": [
        "error",
        "never"
      ],
      "unicorn/prevent-abbreviations": "off",
      "import/no-unassigned-import": "off",
      "import/order": "off"
    }
  },
  "ava": {
    "environmentVariables": {
      "ADDOK_FILTERS": "citycode,postcode,type"
    }
  },
  "engines": {
    "node": ">= 22.11 < 25"
  }
}
